{{!-- section --}}
<section class="section is-primary  has-text-centered">
    <div class="container">
        <div class="columns">
            <div class="column">
                <h1>Eat-Dat-!@#$%^*-Burger!</h1>

            </div>
        </div>

        <div class="columns">
            <div class="column">
                <h1>Non-devoured Burgers</h1>
                <ul>
                    {{#each burgers}}
                        {{#unless this.devoured}}
                            {{> burgers/burger-block devoured=false}}
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="columns">
            <div class="column">
                <h1>Devoured Burgers</h1>
                <ul>
                    {{#each burgers}}
                        {{#if this.devoured}}
                            {{> burgers/burger-block devoured=true}}
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="columns">
            <div class="column">
                <h2>Add a Burger</h2>
                    <form class="create-form">

                        <div class="form-group">
                            <label for="burger">Burger Name:</label>
                            <input type="text" id="burger" name="name">
                        </div>

                        <button type="submit">Add Burger</button>
                    </form>
            </div>
        </div>
    </div>    
</section>
{{!-- section --}}

